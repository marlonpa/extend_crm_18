<odoo>
    <record id="view_crm_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

           <xpath expr="//group[@invisible=&quot;type == 'lead'&quot;]" position="inside">

                    <field name="x_lead_category"/>
                    <field name="x_delivery_deadline"/>
                    <field name="x_approved_date" readonly="1"/>
                    <field name="x_approved_by" readonly="1" options="{'no_open': True}"/>
                    <field name="x_duration_since_approved"/>
                    <field name="x_installation_required"/>
                    <field name="x_installation_date"
                           invisible="not x_installation_required"/>
                    <field name="x_contract_reference"/>
                    <field name="x_support_required"/>
                    <header>
                        <button name="action_approve_lead"
                                type="object"
                                string="Aprobar"
                                class="btn-primary"
                                invisible="x_approved_by"
                        />
                    </header>
           </xpath>

        </field>
    </record>


</odoo>
